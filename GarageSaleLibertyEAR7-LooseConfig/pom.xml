			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>com.ibm.ws.svt.gs.garagesale-ee7</groupId>
			<artifactId>WASPersonaWebServicesPMIWeb</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>com.ibm.ws.svt.gs.garagesale-ee7</groupId>
			<artifactId>GSjsf20LibertyWeb</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>war</type>
		</dependency>
	</dependencies>
</project>